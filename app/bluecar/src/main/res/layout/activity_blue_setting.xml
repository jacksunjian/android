<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
       style="@style/settingRelativeStyle">
        <TextView
            android:id="@+id/name_tv"
            android:text="蓝牙名称"
            android:layout_width="80dp"
            android:textColor="@color/white"
          style="@style/settingTextLeftStyle" />
        <EditText
            android:id="@+id/name_et"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/name_tv"
            android:hint="输入蓝牙名称"

            android:background="@null"
            android:maxLength="30"
            android:textSize="14sp"
            android:textColorHint="@color/white_sixty_percent"
            android:textColor="@color/white_sixty_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
       style="@style/dividerStyle"></View>
    <RelativeLayout

        style="@style/settingRelativeStyle">
        <TextView
            android:id="@+id/secret_tv"
            android:text="密码"
            android:layout_width="80dp"
            android:textColor="@color/white"
            style="@style/settingTextLeftStyle" />
        <EditText
            android:id="@+id/secret_et"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/secret_tv"
            android:hint="输入密码（六位数字）"
            android:background="@null"
            android:textSize="14sp"
            android:maxLength="6"
            android:digits="1234567890"
            android:textColorHint="@color/white_sixty_percent"
            android:textColor="@color/white_sixty_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        style="@style/dividerStyle"></View>
</LinearLayout>