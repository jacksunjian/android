<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_head"></include>

    <RelativeLayout
        android:id="@+id/infoSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="设备信息"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/batterySetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="电池信息"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/blackSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="查询黑匣子信息"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
</LinearLayout>