<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bgmaincolor"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/searchstate_tv"
    android:text="正在搜索蓝牙设备"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:layout_marginTop="104dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/search_pb"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar_style"
        android:src="@mipmap/device_searching"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Large.NoPadding"
        android:layout_width="150dp"
        android:layout_height="150dp" />


    <Button
        android:id="@+id/enter_btn"
        android:background="@drawable/button_state"
        android:text="进入"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

</LinearLayout>