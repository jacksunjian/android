<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_head"></include>
<RelativeLayout
    android:id="@+id/lightSetting_rl"
   style="@style/settingRelativeStyle">
    <TextView
        style="@style/settingTextLeftStyle"
        android:text="灯光设置"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/gengduo"/>
</RelativeLayout>
<View
    style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/speedSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="车速设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/sensorSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
        style="@style/settingTextLeftStyle"
        android:text="传感器设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/blueSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="蓝牙设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>
    <View
        style="@style/dividerStyle"/>
    <RelativeLayout
        android:id="@+id/othersSetting_rl"
        style="@style/settingRelativeStyle">
        <TextView
            style="@style/settingTextLeftStyle"
            android:text="其他设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gengduo"/>
    </RelativeLayout>

    <View
        style="@style/dividerStyle"/>
</LinearLayout>